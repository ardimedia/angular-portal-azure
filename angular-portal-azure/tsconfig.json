{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "none",
    "moduleResolution": "node",
    "outFile": "dist/apn.js",
    "declaration": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false, //should be true
    "alwaysStrict": true,
    "strictNullChecks": false //should be true
  },
  "exclude": [
    "dist",
    "node_modules",
    "scripts",
    "tests"
  ]
}
